{
  "name": "translatehelper",
  "displayName": "TranslateHelper",
  "description": "help in translate",
  "version": "0.0.3",
  "publisher": "omaralam",
  "icon": "images/icon.png",

  "engines": {
    "vscode": "^1.91.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/repohelper.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [   
     "onCommand:extension.formatAndReplace"
    ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      
      {
        "command": "translatehelper.extractStrings",
        "title": "Extract Strings to JSON",
      "category": "Translate"
      },
      {
        "command": "translatehelper.extractAndReplace",
        "title": "Extract Strings to JSON and replace(eazylocalization)",
      "category": "Translate"   
      }
    ],
    "menus": {
      "explorer/context": [
     
        {
          "command": "translatehelper.extractStrings",
          "when": "explorerResourceIsFolder",
          "group": "extension"
        },
        {
          "command": "translatehelper.extractAndReplace",
          "when": "explorerResourceIsFolder",
          "group": "extension"
            }
       
      ]
  }

  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
  
}
